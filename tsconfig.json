{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~src/*": [ "./src/*" ]
        },
        "target": "es6",
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2018",
            "dom.iterable",
            "dom"
        ],
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment"
    },
    "include": [
        "./src/*.d.ts",
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
